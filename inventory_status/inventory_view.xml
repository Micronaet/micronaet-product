<?xml version="1.0"?>
<openerp>
    <data>
         <record model="ir.ui.view" id="view_product_product_status_inventory_form">
             <field name="name">product.product.status.inventory.form</field>
             <field name="model">product.product</field>
             <field name="inherit_id" ref="product.product_normal_form_view"/>  
             <field name="arch" type="xml">
                 <field name="virtual_available" position="before">
                     <field name="status_ordered" />
                     <newline/>
                     <button name="get_sale_order_line_status" string="Sale order line" type="object" />
                     <newline/>
                     <!--<field name="status_virtual" />-->
                 </field>
             </field>
         </record>
         
         <record model="ir.ui.view" id="view_sale_order_line_tree">
             <field name="name">sale.order.line.tree</field>
             <field name="model">sale.order.line</field>
             <field name="arch" type="xml">
                 <tree string="Sale order line" editable="bottom">        
                     <field name="order_id" />
                     <field name="name" />
                     <field name="product_uom_qty" />
                     <field name="delivered_qty" />
                     <field name="product_uom" />                     
                     <field name="state" />
                 </tree>
             </field>
         </record>
         <record model="ir.actions.act_window" id="action_sale_order_line">
             <field name="name">Sale order line analysis</field>
             <field name="res_model">sale.order.line</field>
             <field name="view_type">form</field>
             <field name="view_mode">tree,form</field>
             <field name="view_id" ref="view_sale_order_line_tree"/>
             <field name="context">{}</field>
             <field name="domain">[]</field>
         </record>
    </data>
</openerp>

