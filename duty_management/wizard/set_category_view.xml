<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
       <!-- product.duty.set.category.wizard -->
       <record id="product_duty_set_category_wizard_view" model="ir.ui.view">
            <field name="name">Force category</field>
            <field name="model">product.duty.set.category.wizard</field>
            <field name="arch" type="xml">
                <form string="Wizard" version="7.0">
                   <header>
                       <button string="Cancel" special="cancel" />                       
                       <button name="action_set_category" string="Set category" type="object" icon="gtk-jump-to" class="oe_highlight" />
                   </header>                   
                   <group colspan="4" col="4">
                        <field name="start" />
                        <button name="refresh_selection" string="Selection" type="object" icon="gtk-refresh"/>
                        <separator string="Selection" colspan="4"/>
                        <field name="selection" nolabel="1" colspan="4" readonly="1" widget="html"/>
                   </group>
                </form>
            </field>
      </record>
      <record model="ir.actions.act_window" id="action_product_duty_set_category_wizard_view">
          <field name="name">Force category</field>
          <field name="res_model">product.duty.set.category.wizard</field>
          <field name="view_type">form</field>
          <field name="view_mode">form</field>
          <field name="target">new</field>
          <field name="view_id" ref="product_duty_set_category_wizard_view"/>
      </record>
      
      <menuitem 
         parent="product_custom_duty_action_menu" 
         id="menu_product_set_duty_category" 
         action="action_product_duty_set_category_wizard_view"
         sequence="20"
         />
      
    </data>
</openerp>
