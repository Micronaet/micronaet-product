<?xml version="1.0"?>
<openerp>
    <data>
        <!-- Inherit sale.order -->
        <record id="view_order_EDI_partner_form" model="ir.ui.view">
            <field name="name">EDI Partner/field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form "/>
            <field name="arch" type="xml">
                <field name="email" position="after"/>
                    <field name="edi_partner_id" />
                </field>
            </field>
        </record>

        <record id="view_order_EDI_partner_order_form" model="ir.ui.view">
            <field name="name">EDI Sale order</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <field name="state" position="before">
                    <field name="has_edi_partner" invisible="1"/>
                    <button name="EDI_order" type="object" string="EDI" groups="edi_base.group_EDI" attrs="{'invisible': [('has_edi_partner', '=', False)]}" />
                </field>
            </field>
        </record>
    </data>
</openerp>
