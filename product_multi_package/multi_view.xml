<?xml version="1.0"?>
<openerp>
    <data>
    
        <record model="ir.ui.view" id="product_normal_form_multipack_view">
            <field name="name">product.product.multipack.form</field>
            <field name="model">product.product</field>            
            <!--<field name="inherit_id" ref="product.product_template_only_form_view"/>-->
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <field name="packaging_ids" position="before">
                    <field name="has_multipackage" />
                    <field name="multi_pack_ids" attrs="{'invisible':[('has_multipackage', '=', False)]}">
                        <tree string="Multipack">
                            <field name="sequence" />
                            <field name="ul_id" />
                            <field name="code" />
                            <field name="name" />
                            <field name="number" sum='total'/>
                            <field name="height" />
                            <field name="width" />
                            <field name="length" />
                            <field name="weight" />
                        </tree>
                        <form string="Multipack">
                            <sheet>
                                <group col="4">
                                    <field name="sequence" />
                                    <field name="code" />

                                    <field name="name" />
                                    <field name="ul_id" />

                                    <field name="number" />
                                    <field name="weight" />

                                    <field name="height" />
                                    <field name="width" />
                                    <field name="length" />
                                </group>
                            </sheet>
                        </form>
                    </field>
                </field>
            </field>
        </record>
    </data>
</openerp>

